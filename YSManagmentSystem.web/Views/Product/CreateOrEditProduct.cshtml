@model YSManagmentSystem.Domain.Product.Product

@{

    ViewData["Title"] = "Index";
    Layout = null;
}

<h1>Add OR Edit Product</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form action="@Url.Content("/Product/CreateOrEditProduct")" id="step-form-horizontal" class="step-form-horizontal" method="post">


    <input type="hidden" asp-for="Id" />
    
    <div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <input type="text" asp-for="ProductName" class="form-control" placeholder="ProductName" required>
        </div>
    </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="Quantity" class="form-control" placeholder="Quantity" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="Description" class="form-control" placeholder="Description" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="ProductCode" class="form-control" placeholder="ProductCode" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="Price" class="form-control" placeholder="Price" required>
            </div>
        </div>
          <div class="col-lg-6">
            <div class="form-group">
                <input type="text" asp-for="Image" class="form-control" placeholder="Image">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <select asp-for="CategoryId" asp-items="@ViewBag.CId" class="form-select">
                    <option value="0">Choose A Category</option>
                </select>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <select asp-for="LocationId" asp-items="@ViewBag.LId" class="form-select">
                    <option value="0">Choose A Location</option>
                </select>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <select asp-for="SupplierId" asp-items="@ViewBag.SId" class="form-select">
                    <option value="0">Choose A Supplier</option>
                </select>
            </div>
        </div>
           <div class="col-lg-6">
            <div class="form-group">
                <select asp-for="BrandId" asp-items="@ViewBag.BId" class="form-select">
                    <option value="0">Choose A Brand</option>
                </select>
            </div>
        </div>

    </div>
   

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="add" style="background-color:darkgreen;">Submit</button>
    </div>


</form>
</div>
</div>
</div>

<script>validateEmpForm()</script>


