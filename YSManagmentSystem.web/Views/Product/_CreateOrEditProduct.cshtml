@model YSManagmentSystem.Domain.Product.Product
<h1>Add Product</h1>

<form action="@Url.Content("/Product/CreateOrEditProduct")" id="myform" method="post">


    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <label id="EmployeeName-error" class="error" for="ProductName" style="display:none"></label>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <label id="EmployeeName-error" class="error" for="Quantity" style="display:none"></label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <label id="EmployeeName-error" class="error" for="Description" style="display:none"></label>
            </div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <label id="EmployeeName-error" class="error" for="ProductCode" style="display:none"></label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <label id="EmployeeName-error" class="error" for="Price" style="display:none"></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-control">
                <select asp-for="CategoryId" asp-items="@ViewBag.CId" class="form-select">
                    <option value="0">Choose A Category</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <label id="EmployeeName-error" class="error" for="Image" style="display:none"></label>
            </div>
            <div class="form-control">
                <select asp-for="LocationId" asp-items="@ViewBag.LId" class="form-select">
                    <option value="0">Choose A Location</option>
                </select>
            </div>
            <br />
            <div class="form-control">
                <select asp-for="SupplierId" asp-items="@ViewBag.SId" class="form-select">
                    <option value="0">Choose A Supplier</option>
                </select>
            </div>
            <br />
            <div class="form-control">
                <select asp-for="BrandId" asp-items="@ViewBag.BId" class="form-select">
                    <option value="0">Choose A Brand</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <br />

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="add" style="background-color:darkgreen;">Submit</button>
    </div>


</form>

<script>validateEmpForm()</script>