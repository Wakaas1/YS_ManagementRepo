@model YSManagmentSystem.Domain.User.AppRole

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Role</h1>

<form action="@Url.Content("/Role/CreateRole")" id="myform" method="post">


    <input type="hidden" asp-for="RoleId" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <label id="EmployeeName-error" class="error" for="RoleName" style="display:none"></label>
            </div>
        </div>
    </div>
    <br />
    <br />

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="add" style="background-color:darkgreen;">Submit</button>
    </div>


</form>

<script>validateEmpForm()</script>


