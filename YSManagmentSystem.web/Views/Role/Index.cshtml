@model IEnumerable<YSManagmentSystem.Domain.User.UserDetail>

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<a asp-action="CreateRole">Create Role</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                User Name
            </th>
            <th>
                User Email
            </th>
            <th>
                Role Assigned
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roles_list)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditRole", new {  uId=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
